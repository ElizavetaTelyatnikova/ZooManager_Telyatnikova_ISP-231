<Window x:Class="WPFZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZooManager"
        mc:Ignorable="d"
        Title="Zoo Manager" Height="520" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="210"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Label Content="Zoo List"
                Grid.Row="0" Grid.Column="0"
               FontWeight="Bold" 
               Foreground="#2C3E50" 
               Margin="0,0,0,5"/>
        <ListBox x:Name="listZoos"
                 Grid.Row="1" Grid.Column="0"
                 Margin="0,0,5,0" 
                 BorderThickness="1" 
                 BorderBrush="#DDE0E7"
                 SelectionChanged="listZoos_SelectionChanged"/>
        <Label Content="Associated Animals"
               Grid.Row="0" Grid.Column="1"
               FontWeight="Bold" 
               Foreground="#2C3E50" 
               Margin="0,0,0,5"/>
        <ListBox x:Name="listAssociatedAnimals"
                 Grid.Row="1" Grid.Column="1"
                 Margin="5,0,5,0" 
                 BorderThickness="1" 
                 BorderBrush="#DDE0E7"/>
        <ListBox x:Name="listAllAnimals"
                 Grid.Row="1" Grid.Column="2"
                 Margin="5,0,0,0" 
                 BorderThickness="1" 
                 BorderBrush="#DDE0E7"/>
        <Label Content="All Animals" 
               Grid.Row="0" Grid.Column="2"
               FontWeight="Bold" 
               Foreground="#2C3E50" 
               Margin="0,0,0,5"/>
        <Button Content="Delete Zoo"
                Click="DeleteZoo_Click"
                Grid.Row="5" Grid.Column="0"
                Background="#E74C3C" 
                Foreground="White"
                Margin="0,0,5,5" Padding="10,5"/>
        <Button Content="Remove Animal"
                Grid.Row="5" Grid.Column="1"
                Background="#E74C3C" 
                Foreground="White"
                Margin="5,0,5,5" Padding="10,5"
                Click="RemoveAnimal_Click"/>
        <Button Content="Add Zoo"
                Grid.Row="3" Grid.Column="0"
                Background="#27AE60" 
                Foreground="White"
                Margin="0,0,5,5" Padding="10,5"
                Click="AddZoo_Click"/>
        <Button Content="Add Animal Zoo"
                Grid.Row="3" Grid.Column="1"
                Background="#27AE60" 
                Foreground="White"
                Margin="5,0,5,5" Padding="10,5"
                Click="AddAnimal_Click"/>
        <Button Content="Update Zoo"
                Grid.Row="4" Grid.Column="0"
                Background="#3498DB" 
                Foreground="White"
                Margin="0,0,5,5" Padding="10,5"
                Click="UpdateZoo_Click"/>
        <Button Content="Update Animal"
                Grid.Row="4" Grid.Column="1"
                Background="#3498DB" 
                Foreground="White"
                Margin="5,0,5,5" Padding="10,5"
                Click="UpdateAnimal_Click"/>
        <Button Content="Delete Animal"
                Grid.Row="4" Grid.Column="2"
                Background="#C0392B" Foreground="White"
                Margin="5,0,0,5" Padding="10,5"
                Click="DeleteAnimal_Click"/>
        <Button Content="Add Animal to Zoo"
                Grid.Row="3" Grid.Column="2"
                Background="#16A085" Foreground="White"
                Margin="5,0,0,5" Padding="10,5"
                Click="AddAnimalToZoo_Click"/>
        <TextBox x:Name="myTextBox" Text="TextBox"
                 Grid.Row="2" Grid.ColumnSpan="3"
                 TextWrapping="Wrap"
                 Margin="0,10,0,10" Padding="5"
                 BorderThickness="1" BorderBrush="#DDE0E7"/>
    </Grid>
</Window>
